#include <stdio.h>

int ft_sqrt(int nb)
{
	int i;

	i = 1;
	while((i * i) <= nb)
	{
		if( (i * i) == nb)
		{
			printf("%d", i);
			return (i);
		}
		i++;
	}
	printf("%d", 1);
	return (0);
}

int main(void)
{
	ft_sqrt(49);
}
