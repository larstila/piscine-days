#include <stdio.h>

char   ft_str_is_alpha(char *str)
{
    int i;
	int ret;

	ret = 0;
    i = 0;
	if (str[i] == '\0')
	{
		ret = 1;
	}
    while (str[i] != '\0')
    {
        if ((65 <= str[i] && str[i] <= 90) || (97 <= str[i] && str[i] <= 122))
        {
            if (65 <= str[i] && str[i] <= 90)
            {
                str[i] = (str[i] + 32);
            }
            if (((str[i - 1] == ' ') || i == 0 || (str[i - 1] == '+') ||
				 (str[i - 1] == '-')) && (97 <= str[i] && str[i] <= 122))
            {
                str[i] = str[i] - 32;
            }
        }
        i++;
    }
    return (ret);
}
