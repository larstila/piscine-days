#include <stdio.h>

void ft_takes_place(int hour)
{
	int i;
	int j;
	char a;
	char b;

	a = 0;
	b = 0;
	a = 'A';
	b = 'A';
	
	if (hour < 2300 && hour >= 1300)
	{
		i = hour / 100 - 12;
		j = i + 1;
		a = 'P';
		b = 'P';
	}
	printf("%s", "THE FOLLOWING TAKES PLACE BETWEEN "); 
	printf("%d.00 %c.M. AND %d %c.M.", i, j, a, b);
}

int main(void)
{
	ft_takes_place(1450);
}
